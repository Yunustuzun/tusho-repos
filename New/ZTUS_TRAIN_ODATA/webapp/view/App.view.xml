<mvc:View controllerName="int.train.odata.ZINT_TRAIN_ODATA.controller.App" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<List id="mainList" items="{/MaterialSet}" growing="true" mode="SingleSelect">
							<headerToolbar></headerToolbar>
							<ObjectListItem title="{Matnr}">
								<firstStatus>
									<ObjectStatus text="{Maktx}"></ObjectStatus>
								</firstStatus>
								<ObjectAttribute text="{Mtart}"/>
							</ObjectListItem>
						</List>
					</content>
					<footer>
						<Toolbar>
							<Button text="Delete" press="handleButtonPress"></Button>
							<ToolbarSpacer/>
							<Button text="Update" press="handleButtonPress"></Button>
							<Button text="Create" press="createOperation"></Button>
						</Toolbar>
					</footer>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>